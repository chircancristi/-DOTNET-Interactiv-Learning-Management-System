@{
    ViewData["Title"] = "Home Page";
}


<div class="container-flex">
    <section id="modalJS" class="modal-replyes">
        <div class="modal-container">
            <div id="replyContentJS" class="modal-container__replyes">

            </div>
            <div class="modal-container__input">
                <input class="chat-form__input chat-form__input--modal" type="text" name="question"><br>
                <div class="buttons__container buttons__container--modal">
                    <input class="chat-form__button" type="submit" value="Submit">
                </div>
            </div>
        </div>
    </section>
    <section class="users">
        <h2 class="users__title">Online Users</h2>
        <div class="users__flex">
            @for (int i = 0; i < @ViewBag.students.Count; i++)
            {
                <div class="user">
                    <h2 class="user__name">@ViewBag.students[i].LastName @ViewBag.students[i].FirstName</h2>
                    <div class="users__status-container">
                        <i class="fas fa-minus-circle"></i>
                        <span class="dot"></span>
                    </div>
                </div>
            }

        </div>
    </section>
    <section class="questions">
        <div class="questions__content" id="questions">
           
            @for (int i = 0; i < @ViewBag.questions.Count; i++)
            {
                <div class="question">
                    <h3 class="question-author">@ViewBag.owners[i]</h3>
                    <p class="question-string"> @ViewBag.questions[i].Content </p>
                    <a class="questions-answer__trigger" id="@ViewBag.questions[i].Id" href="#"> Vezi raspunsuri</a>
                </div>
            }

        </div>
        <div class="questions__chat-container">
            <form method="POST" class="questions__chat-form">
                <input for="questionProfessor" class="chat-form__input" type="text" name="questionProfessor"><br>
                <div class="buttons__container">
                    <button id="closeRoomJS" class="close-room">Close Room</button>
                    <input id="questionProfessor" class="chat-form__button" type="submit" value="Submit">
                </div>
            </form>

        </div>
    </section>
    <section class="courses">
        <h2 class="courses__title">Courses</h2>
        <div class="courses__flex">
            <div class="course" id="ML">
                <span class="course__title">Machine learning</span>
                <i id="MLarrow" class="fas fa-arrow-up"></i>
            </div>
            <div class="rooms-flex" id="roomML">
                @{

                    for (int roomNo = 0; roomNo < @ViewBag.rooms.Count; roomNo++)
                    {
                        <div class="room">
                            <span>Room @(roomNo + 1)</span>
                            <button class="rooms" id=@ViewBag.rooms[roomNo].Id>Join room</button>
                        </div>

                    }
                }

                <div class="add-room__container">
                    <input type="submit" name="AddRoom" value="Add room" class="add-room__button"/>
                    <!-- <button class="add-room__button">Add room</button> -->
                </div>
            </div>
        </div>
    </section>
</div>



